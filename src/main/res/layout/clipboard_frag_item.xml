<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="8dp"
	android:foreground="?selectableItemBackground">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<com.nkming.utils.widget.ImageViewEx
			android:id="@+id/image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginTop="16dp"
			android:layout_centerHorizontal="true"
			android:maxHeight="128dp"
			android:adjustViewBounds="true"
			android:visibility="gone"
			app:async="true"
			app:loadOptimalSize="true"
			tools:visibility="visible"
			tools:src="@drawable/placeholder"/>

		<TextView
			android:id="@+id/text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginTop="16dp"
			android:layout_below="@id/image"
			android:textAppearance="@style/TextAppearance.AppCompat.Body1"
			android:visibility="gone"
			android:maxLines="6"
			android:ellipsize="end"
			tools:visibility="visible"
			tools:text="@tools:sample/lorem/random" />

		<TextView
			android:id="@+id/datetime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:layout_marginStart="16dp"
			android:layout_alignParentStart="true"
			android:layout_below="@id/text"
			android:textAppearance="@style/TextAppearance.AppCompat.Small"
			android:textSize="12sp"
			tools:text="2018-01-01 00:00:00"/>

		<Button
			android:id="@+id/copy"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/datetime"
			android:layout_alignParentStart="true"
			android:layout_marginStart="8dp"
			android:layout_marginBottom="8dp"
			android:layout_marginTop="8dp"
			style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
			android:text="@string/copy"/>

		<Button
			android:id="@+id/remove"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/text"
			android:layout_toEndOf="@id/copy"
			android:layout_alignTop="@id/copy"
			style="@style/Base.Widget.AppCompat.Button.Borderless"
			android:text="@string/remove"/>

		<ImageButton
			android:id="@+id/more"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/datetime"
			android:layout_alignParentEnd="true"
			android:layout_marginEnd="8dp"
			android:layout_alignTop="@id/remove"
			android:layout_alignBottom="@id/remove"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:background="?android:selectableItemBackground"
			android:src="?clipboardFragItemMoreBtn" />
	</RelativeLayout>
</android.support.v7.widget.CardView>
